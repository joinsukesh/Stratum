@using Stratum.Feature.Base
@using Stratum.Feature.PageContent.Models.Product
@using Sitecore.Mvc
@using Stratum.Foundation.Common
@using Stratum.Foundation.Common.Utilities
@model ProductsListing
@{
    Layout = null;
    bool isExperienceEditor = SitecoreUtility.IsExperienceEditorMode();
}

@if (Model != null)
{
    <div class="row portfolio-container" data-aos="fade-up">
        @if ((Model.Products != null && Model.Products.Count > 0) || isExperienceEditor)
        {
            if ((Model.Products == null || Model.Products.Count == 0) && isExperienceEditor)
            {
                <div>
                    <h3>Add products</h3>
                </div>
            }
            else if (Model.Products != null && Model.Products.Count > 0)
            {
                foreach (ProductSearchResultItem pd in Model.Products)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item">
                        <div class="card">
                            <img src="@pd.ProductImageUrl" class="card-img-top" />

                            <div class="card-body">
                                <h5 class="card-title">
                                    @pd.Title
                                </h5>
                                <p>
                                    <label>Category:</label>&nbsp;@pd.Category
                                </p>
                                @if (pd.ProductTags != null && pd.ProductTags.Count > 0)
                                {
                                    <p>
                                        <label>Tags:</label>&nbsp;
                                        @foreach (string tag in pd.ProductTags)
                                        {
                                            <span class="badge bg-secondary">@tag</span>
                                        }
                                    </p>
                                }
                                @if (!string.IsNullOrWhiteSpace(pd.ProductPriceDisplay))
                                {
                                    <p class="card-text">@pd.ProductPriceDisplay</p>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        }
        else
        {
            <div class="col-lg-12">
                <h4>@CommonDictionaryValues.Messages.Status.NoResultsFound</h4>
            </div>
        }
    </div>
    if (Model.Pagination != null && Model.Pagination.TotalPages > 1)
    {
        @Html.Partial(BaseConstants.PaginationViewPath, Model.Pagination)
    }
}
else
{
    <span></span>
}
