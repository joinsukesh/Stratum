@using Stratum.Feature.Metadata.Models
@model PageMetadata
@{
    Layout = null;
}

@if (Model != null)
{
    @Model.SiteMetaTags

    if (!string.IsNullOrWhiteSpace(Model.FinalMetaTitle))
    {
        <title>@Model.FinalMetaTitle</title>
    }

    if (!string.IsNullOrWhiteSpace(Model.MetaDescription))
    {
        <meta name="description" content="@Model.MetaDescription" />
    }

    if (!string.IsNullOrWhiteSpace(Model.FinalCanonicalUrl))
    {
        <link rel="canonical" href="@Model.FinalCanonicalUrl" />
    }

    if (!string.IsNullOrWhiteSpace(Model.OgTitle))
    {
        <meta property="og:title" content="@Model.OgTitle" />
    }

    if (!string.IsNullOrWhiteSpace(Model.OgDescription))
    {
        <meta property="og:description" content="@Model.OgDescription" />
    }

    if (!string.IsNullOrWhiteSpace(Model.OgUrl))
    {
        <meta property="og:url" content="@Model.OgUrl" />
    }

    if (!string.IsNullOrWhiteSpace(Model.OgImage))
    {
        <meta property="og:image" content="@Model.OgImage" />
    }

    @Model.Favicons

    if (Model.IndexAndFollow)
    {
        <meta name="robots" content="index, follow" />
    }

    @Model.OtherMetaTags

}
else
{
    <span></span>
}
